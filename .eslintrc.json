{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "globals": {
    "window": true,
    "chrome": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "@coax/eslint-config-fe-react"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "parser": "@babel/eslint-parser",
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "react/prop-types": "off",
      "no-prototype-builtins": "off",
      "semi": [2, "always"],
      "object-curly-newline": ["error", { "multiline": true }]
  },
  "overrides": [
      {
        "files": ["*.jsx", "*.js", "*.ts", "*.tsx"]
      }
  ]
}
